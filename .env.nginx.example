# Nginx + リバースプロキシ本番環境用設定

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# SSL設定: Nginxがリバースプロキシの場合はfalseに設定
FLASK_USE_SSL=false

# セキュリティ設定（本番環境では必須！強力なランダムキーを使用）
# 生成方法: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-random-secret-key-here-use-at-least-32-characters

# Database Configuration
DATABASE_DIR=./data
DATABASE_NAME=auth.db

# Initial Admin User（初回起動後は必ず変更してください）
INITIAL_USERNAME=admin
INITIAL_PASSWORD=change-this-password-immediately

# WebAuthn Configuration（本番環境用）
# RP_ID: あなたのドメイン名（サブドメインなし）
RP_ID=your-domain.example.com

# RP_NAME: サービス名
RP_NAME=PyAuth Service

# ORIGIN: HTTPS URL（NginxがSSL終端を担当）
ORIGIN=https://your-domain.example.com

# Session Configuration
SESSION_PERMANENT=False
PERMANENT_SESSION_LIFETIME=3600
