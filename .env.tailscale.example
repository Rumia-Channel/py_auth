# Tailscale Funnel用設定（Docker Compose + tailscaleコンテナ）

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_HOST=0.0.0.0
FLASK_PORT=5008
SECRET_KEY=your-64-char-random-string-here

# Database Configuration
DATABASE_DIR=./data
DATABASE_NAME=auth.db

# Initial Admin User
INITIAL_USERNAME=admin
INITIAL_PASSWORD=your-secure-password

# WebAuthn Configuration (Tailscaleドメイン)
RP_ID=your-machine-name.your-tailnet.ts.net
RP_NAME=PyAuth Service
ORIGIN=https://your-machine-name.your-tailnet.ts.net

# Session Configuration
SESSION_PERMANENT=False
PERMANENT_SESSION_LIFETIME=3600